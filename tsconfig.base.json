{
	"compilerOptions": {
		// Output related
		"target": "es2017",
		"importHelpers": true,

		// Module resolution
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"*": [
				"./node_modules/*",
				"./src/types/*"
			]
		},

		// Type checking
		"lib": ["es2017"],
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"compileOnSave": false
}
